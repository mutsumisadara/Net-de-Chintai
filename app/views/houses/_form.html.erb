<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
        <% house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :price %>円
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>年
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :information %>
  </div>
  
  <hr>
  <% number = 0 %>
  <%= form.fields_for :stations do |station| %>
  <h3>最寄駅<%= number += 1 %></h3>

  <div class="field">
    <%= station.label :路線名 %>
    <%= station.text_field :line %>
  </div>

  <div class="field">
    <%= station.label :駅名 %>
    <%= station.text_field :station %>
  </div>

  <div class="field">
    <%= station.label :徒歩分数 %>
    <%= station.number_field :on_foot %>分
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit :登録する %>
  </div>
<% end %>